<FlowDocument
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:styles="clr-namespace:GLTWarter.Styles"
    xmlns:data="clr-namespace:GLTWarter.Data"
    xmlns:my="clr-namespace:GLTWarter.Controls"
    FontFamily="sans-serif"
    PagePadding="72,96,72,96">
    <FlowDocument.Resources>
        <Style x:Key="PageHeaderStyle" TargetType="FlowDocument">
            <Setter Property="FontFamily" Value="sans-serif"/>
            <Setter Property="PagePadding" Value="72,48,72,48"/>
        </Style>
        <DataTemplate x:Key="PageHeader">
            <Grid>
                <TextBlock TextAlignment="Left" VerticalAlignment="Top" Margin="0">
                    文件标头
                </TextBlock>
                <TextBlock TextAlignment="Right" VerticalAlignment="Bottom" Margin="0">
                    第 <Run styles:BindableExtender.Text="{Binding CurrentPage}"/> 页，共 <Run styles:BindableExtender.Text="{Binding PageCount}"/> 页
                </TextBlock>
            </Grid>
        </DataTemplate>
    </FlowDocument.Resources>

